<p style="color: green"><%= notice %></p>
<div id="show" class="card p-4">
  <%= render @spectacle %>
  <%#= @spectacle.performs.company %>
    <% @spectacle.performs.each do | attribut | %>
      <h3 class="mb-0">
          <%= attribut.company %>
      </h3>
        <p class="mb-0"><strong>date : </strong>
        <%= attribut.start_time %>
      </p>
      <p class="mb-0"><strong>Address : </strong>
          <%= attribut.address %>
      </p>
          <p class=""><strong>Collected : </strong>
          <%= attribut.collected %>
      </p>

    <% end %>
  <p class="">
    <%= @spectacle.description %>
  </p>


  <div>
    <%= link_to "Back to spectacles", spectacles_path %>
    <%= link_to "Edit this spectacle", edit_spectacle_path(@spectacle) %> |
    <%= button_to "Destroy this spectacle", @spectacle, method: :delete %>
  </div>
</div>
