<div class="img_container">
  <%#= cl_image_tag perform.photo.key, height: 300, width: 400, crop: :fill %>
  <% perform.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 900, width: 1600, :crop=>"limit" %>
  <% end %>
</div>
<div id="<%= dom_id perform %>" class="p-4">
  <h2 class="big-title pt-4">
    <%= perform.title %>
  </h2>
  <p class="mb-0">
    <strong>Company:
    <%= perform.company %></strong>
  </p>
  <p class="mb-0">
    <strong>Date:</strong>
    <%= perform.start_time != nil ? (perform.start_time.strftime('%I:%M | %a %d %^b')) : () %>
    <%#= perform.start_time.strftime('%I:%M | %a %d %B') %>
    <%= @debut %>


  </p>

  <p class="mb-0">
    <strong>Address:</strong>
    <%= perform.address %>
  </p>

  <p class="mb-0">
    <strong>Collected:</strong>
    <%= perform.collected %>
  </p>
  <p class="mb-0">
    <strong>Photos.ids</strong>
    <%= perform.photos.ids %>
  </p>
</div>
