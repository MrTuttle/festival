  <div class="line">
    <%#= cl_image_tag perform.photo.key, height: 300, width: 400, crop: :fill %>
    <% perform.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 900, width: 1600, :crop=>"limit" %>
    <% end %>
  </div>
<div id="<%= dom_id perform %>" class="p-4">
  <h2 class="pt-4">
    <%= perform.title %>
  </h2>
  <p class="mb-0">
    <strong>Company:
    <%= perform.company %></strong>
  </p>
  <p class="mb-0">
    <strong>Date:</strong>
    <%= perform.start_time.strftime('%I:%M | %a %d %B') %>
    <strong>@debut in show : </strong><%= @debut %>

    <%#= render "start_time ", perform: @perform %>
  </p>

  <p class="mb-0">
    <strong>Address:</strong>
    <%= perform.address %>
  </p>

  <p class="mb-0">
    <strong>Collected:</strong>
    <%= perform.collected %>

  </p>
</div>
