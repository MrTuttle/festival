<div class="img_container">
  <%= cl_image_tag("#{perform.spectacle.photo}", height: 450, width: 800, :crop=>"limit") %>

  <%# c'est mis a fonctionner d'un coup - peut être y à t'il une latence avec cloudinary,
  j'ai eu plusieur fois cette impression en liant des images %>


  <%# perform.spectacle.photos.each do |photo| %>
    <%#= cl_image_tag("#{photo}", height: 900, width: 1600, :crop=>"limit") %>
  <%# end %>


</div>
<div id="<%= dom_id perform %>" class="p-4">
  <h2 class="big-title pt-4">
    <%#= @perform.spectacle.title %>
    <%# @ passe pour show mais echoue dans index -%>
    <%= perform.title %>
  </h2>
  <p class="mb-0">
    <strong>Company:
    <%= perform.company %></strong>
  </p>
  <p class="mb-0">
    <strong>Date:</strong>
    <%= perform.start_time != nil ? (perform.start_time.strftime('%I:%M | %a %d %^b')) : () %>
    <%#= perform.start_time.strftime('%I:%M | %a %d %B') %>
  </p>
  <p class="mb-0">
  <strong>@Date:</strong>
  <%= @date %>

  </p>
  <p class="mb-0">
    <strong>Address:</strong>
    <%= perform.address %>
  </p>

  <p class="mb-0">
    <strong>Collected:</strong>
    <%= perform.collected %>
  </p>

</div>
