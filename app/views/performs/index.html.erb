<p style="color: green"><%= notice %></p>

<h1>Performs</h1>

<div id="performs">
  <% @performs.each do |perform| %>
    <% if perform.collected == true %>
      <%= render perform %>
    <% end %>
    <p>
      <%= link_to "Show this perform", perform %>
    </p>
  <% end %>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= link_to "New perform", new_perform_path %>
